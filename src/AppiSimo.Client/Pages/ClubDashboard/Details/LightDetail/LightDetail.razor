@page "/club-dashboard/light/create"
@page "/club-dashboard/light/edit/{id:guid}"

@using MatBlazor;

@inherits LightDetailComponent

<EditForm Model="@ViewModel" OnValidSubmit="@(async () => await HandleValidSubmit())">

    <DataAnnotationsValidator/>
    <ValidationSummary/>

    <MatTextField @bind-Value="@ViewModel.Type" Dense="true" Label="Nome" HelperText="Inserire il nome della luce."></MatTextField>
    
    <MatNumericUpDownField 
        Label="With icon" 
        @bind-Value="@ViewModel.Price"
        DecimalPlaces=2 
        Step=1
        Minimum="0"> 
    </MatNumericUpDownField> 

    <MatCheckbox @bind-Checked="@ViewModel.Enable" Label="Abilitato"></MatCheckbox>

    <MatButton type="submit" name="action" Outlined="true">Salva</MatButton>

</EditForm>